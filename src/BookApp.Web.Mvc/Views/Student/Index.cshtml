@using BookApp.Students.Dto
@using BookApp.Web.Models.Student
@using BookApp.Web.Startup
@model StudentListViewModel

@{
    ViewBag.Title = L("Student");
    ViewBag.CurrentPageName = PageNames.Student;
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Student/Index.js" asp-append-version="true"></script>
    </environment>
}


    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-info elevation-1">
                            <i class="fa fa-user"></i>
                        </span>
                        <div class="info-box-content">
                            <h1 class="info-box-text">Student Information Dashboard</h1>
                        </div>
                        <span class="info-box-icon">
                            <a href="/Student/Create" class="save-button btn float-sm-right btn-lg" style="border-radius: 50%;background-color:#0074B7;color:white" type="button">
                                <i class="fas fa-plus"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="BookTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Student Id</th>
                                    <th>Student Name</th>
                                    <th>Contact Number</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th style="width:200px">Actions</th>
                                </tr>
                            </thead>
                        @foreach (var students in Model.Students)
                        {
                            <tr>
                                <td>@students.Id</td>
                                <td>@students.StudentName</td>
                                <td>@students.StudentContactNumber</td>
                                <td>@students.StudentEmail</td>
                                <td>@students.StudentDepartment?.Name</td>
                                <td>
                                    <a href="/Student/Create/@students.Id" type="button" class="update-button btn btn-sm bg-primary edit-role" name="Update">
                                        <i class="fas fa-pencil-alt"></i> Update
                                    </a>
                                    <button type="button" class="delete-button btn btn-sm bg-danger" name="Delete" student-id="@students.Id" student-name="@students.StudentName">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
