@using BookApp.Web.Models.Common.Modals
@using BookApp.Web.Models.Student
@using BookApp.Web.Startup
@using BookApp.Web.Host.Controllers
@using BookApp.Web.Models.Department
@model CreateStudentViewModel
@{
    ViewBag.Title = L("Student");
    ViewBag.CurrentPageName = PageNames.Student;
}
@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Student/Create.js" asp-append-version="true"></script>
    </environment>
}
    <body>
        <section class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-info elevation-1">
                                <i class="fa fa-user"></i>
                            </span>
                            <div class="info-box-content">
                                <h1 class="info-box-text">Student Information Form</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="bg-opacity-5 py-2" id="form">
            <form style="text-align: center" name="StudentInformationForm" role="form" class="form-validation form-horizontal">
                <input type="hidden" name="Id" value="@Model?.Id" class="form-control">
                <div class="row">
                    <div class="col-md-9 mb-10">
                        <div role="tabpanel" class="tab-pane container active">
                            <div class="form-group row required" style="text-align:right">
                                <label class="col-md-5 col-form-label">Name</label><br>
                                <div class="col-md-5">
                                    <input type="text" name="StudentName" id="StudentName" value="@Model?.StudentName" class="form-control" placeholder="Full Name" required maxlength="255" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required" style="text-align:right">
                                <label class="col-md-5 col-form-label">Contact Number</label><br>
                                <div class="col-md-5">
                                    <input type="number" name="StudentContactNumber" id="StudentContactNumber" value="@Model?.StudentContactNumber" class="form-control" placeholder="Contact Number" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required" style="text-align:right">
                                <label class="col-md-5 col-form-label">Email</label><br>
                                <div class="col-md-5">
                                    <input type="email" name="StudentEmail" id="StudentEmail" value="@Model?.StudentEmail" class="form-control" placeholder="Email" required maxlength="255" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required" style="text-align: right">
                                <label class="col-md-5 col-form-label">Department</label><br>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(m => m.StudentDepartmentId, Model.ListDepartments.Select(d => new SelectListItem { Value = d.Id.ToString(), Text = d.Name}), "--Select Department--", new { @class = "form-control"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container my-3">
                    <div class="col-md-12 text-center">
                        <button type="button" class="back-button btn btn-default" name="Back">Back</button>
                        <button type="submit" class="save-button btn btn-primary" name="Create">Save</button>
                    </div>                   
                </div>
            </form>
        </div>
    </body>


