@using BookApp.Web.Startup
@using BookApp.Web.Models.Book
@using BookApp.Books.Dto
@model ListBookViewModel
@{
    ViewBag.Title = L("Book");
    ViewBag.CurrentPageName = PageNames.Book;
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Book/Index.js" asp-append-version="true"></script>
    </environment>
    }
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <a href="/Book/Create" class="save-button btn bg-blue float-sm-right btn-add" type="button">Add Books</a>                    
                </div>
            </div>
        </div>

    </section>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="BookTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Book Id</th>
                                    <th scope="col">Book Title</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Publisher</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                        @foreach (var books in Model.Books)
                        {
                            <tr>
                                <td>@books.Id</td>
                                <td>@books.BookTitle</td>
                                <td>@books.BookAuthor</td>
                                <td>@books.BookPublisher</td>
                                <td>@books.BookCategories?.Name</td>
                                @if(books.IsBorrowed){
                                    <td>Borrowed</td>
                                }else{
                                    <td>Returned</td>
                                }
                                <td>
                                    <a href="/Book/Create/@books.Id" type="button" class="update-button btn btn-sm bg-secondary edit-role" name="Update">
                                        <i class="fas fa-pencil-alt"></i> Update
                                    </a>
                                    <button type="button" class="delete-button btn btn-sm bg-danger" name="Delete" book-id="@books.Id" book-title="@books.BookTitle">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
